{
  "compilerOptions": {
    "noImplicitAny": true,
    "skipLibCheck": true,
    "pretty": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types/", "./@types/"]
  },
  "include": ["./src/", "./tests/", "./@types/"]
}
